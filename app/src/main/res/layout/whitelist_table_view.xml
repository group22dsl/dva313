<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C1CBE1"
    tools:context=".database.whitelist.WhitelistTableViewActivity">

    <ListView
        android:id="@+id/database_list_Appfilters"
        android:layout_width="363dp"
        android:layout_height="551dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/clearTable_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_todo"
        app:layout_constraintVertical_bias="0.481">

    </ListView>

    <Button
        android:id="@+id/select_todo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/style"
        android:backgroundTint="#232289"
        android:onClick="onAdd"
        android:text="@string/add_to_database"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/database_list_Appfilters"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/database_list_Appfilters"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/clearTable_button"
        android:layout_width="144dp"
        android:layout_height="47dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/style"
        android:backgroundTint="#232289"
        android:onClick="clearTable"
        android:text="CLEAR TABLE"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
